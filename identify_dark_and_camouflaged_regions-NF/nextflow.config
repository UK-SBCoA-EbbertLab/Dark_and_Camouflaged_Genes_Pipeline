// CONFIGURATION FILE

process {

    withLabel: realign_bams {
        executor='slurm'
        clusterOptions='--partition normal --time 72:00:00 --account coa_mteb223_uksr --ntasks 16 --mem 500G'
    }

    withLabel: run_drf {
        executor='slurm'
        clusterOptions='--partition normal --time 72:00:00 --account coa_mteb223_uksr --ntasks 1 --mem 40960M' 
    }

    withLabel: combine_drf_output {
        executor='slurm'
        clusterOptions='--partition normal --time 48:00:00 --account coa_mteb223_uksr --ntasks 16 --mem-per-cpu 128G'
    }

    withLabel: local {
        executor='local'
    }

    withLabel: create_bed_file {
	executor='slurm'
	clusterOptions='--partition normal --time 48:00:00 --account coa_mteb223_uksr --ntasks 16 --mem 128G'
    }

}



// Define executor type and maximum queue size for jobs at once ##

executor {

    name="slurm"
    queueSize = 50
}


// Point to singularity image with the tools necessary to run the pipeline
singularity {

    enabled = true
    process.container = "${projectDir}/../singularity/rescue_camo_variants.sif"
}

